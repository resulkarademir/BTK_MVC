@model Candidate
<div class="display-6">
Apply
</div>

<form action="">
    <div class="form-group my-2">
        <label>Email</label>
        <input name="Email" class="form-control" >
    </div>
    <div class="form-group my-2">
        <label>FirstName</label>
        <input name="FirstName" class="form-control" >
    </div>
    <div class="form-group my-2">
        <label>LastName</label>
        <input name="LastName" class="form-control" >
    </div>
    <div class="form-group my-2">
        <label>Age</label>
        <select class="form-control" name="Age">
        <option value="18">18</option>
        <option value="19">19</option>
        <option value="20">20</option>
        <option value="21">21</option>
        <option value="22">22</option>
        <option value="23">23</option>
        </select>
    </div>

    <fieldset class="">
         <legend>Select one course.</legend>
           <p>
                <input id="mvc" type="radio" name="SelectedCourse" value="Asp.NetCore">
                <label for="">Asp.NetCore</label>
           </p>
            <p>
                <input id="C#" type="radio" name="SelectedCourse" value="C#">
                <label for="">Asp.NetCore</label>
           </p>
            <p>
                <input id="Blazor" type="radio" name="SelectedCourse" value="Blazor">
                <label for="">Asp.NetCore</label>
           </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a type="button" class="btn btn-warning" href="/" >Home</a>
    </div>
</form>