@model Candidate
<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control" >
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset class="">
        <legend>Select one course.</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.NetCore" checked>
            <label for="">Asp.NetCore</label>
        </p>
        <p>
            <input id="C#" type="radio" asp-for="SelectedCourse" value="C#">
            <label for="">C#</label>
        </p>
        <p>
            <input id="Blazor" type="radio" asp-for="SelectedCourse" value="Blazor">
            <label for="">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a type="button" class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>